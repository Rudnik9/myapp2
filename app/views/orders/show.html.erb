<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6">
      <h1>Order ID: <%= @order.id %></h1><br>
      <strong>Product Name: </strong><%= @order.product.name %><br>
      <strong>Product Price: </strong><%= @order.product.price %>&euro;<br>
      <strong>Total Price: </strong><%= @order.total %>&euro;
    </div>
    <div class="col-sm-6">
      <%= image_tag(@order.product.image_url, class: "img-fluid product-pic-order") %>
    </div>
  </div>
</div>
