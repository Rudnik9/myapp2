<div class="container-fluid">
  <div class="row">
    <% @orders.each do |order| %>
    <div class="col-sm-4">
      <%= image_tag(order.product.image_url, class: "img-fluid product-pic") %>
      <h1>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order %>
      </h1>
      <p><%= order.product.description %></p>
      <strong><%= order.product.price %>&euro;</strong>
    </div><!-- /col -->
    <% end %>
  </div>
</div>
