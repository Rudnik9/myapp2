<div class="container-fluid login-page">

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group col-sm-12">
      <%= f.label :email, class: "col-sm-12 control-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field form-group col-sm-12">
      <%= f.label :password, class: "col-sm-12 control-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field form-group col-sm-12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions form-group col-sm-12 contact-button">
      <div class="col-sm-12">
      <%= f.submit "Log in", class: "btn btn-outline-success my-2 my-sm-0" %>
      </div>
    </div>
  <% end %>

  <div class="col-sm-12">
  <%= render "devise/shared/links" %>
  </div>

</div>
