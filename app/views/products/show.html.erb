<p id="notice"><%= notice %></p>

<h2><%= @product.name %></h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 product-order-list">
      <strong>Description: </strong><%= @product.description %><br>
      <strong>Colour: </strong><%= @product.colour %><br>
      <strong>Price: </strong><%= @product.price %>&euro;<br>
      <strong>Average Rating: </strong><div class="rated" data-score="<%= @product.average_rating %>"></div><br><br>
      <%= render 'new_comment' %><br>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>
    <div class="col-sm-6">
      <%= image_tag(@product.image_url, class: "img-fluid product-pic-order") %>
      <%= render 'comments' %>
    </div>
  </div>
</div>
